<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/sub_layout"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="120dp"
        android:background="@drawable/bg_round_view_white">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/close_copy"
            android:layout_gravity="right"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="17dp"
                android:src="@mipmap/password_input"
                android:layout_marginRight="6dp"
                android:layout_gravity="center_vertical"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/input_pwd"
                android:textColor="@color/c1A"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"/>
            
        </LinearLayout>

        <com.ebei.library.PasswordInputEdt
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="25dp"
            app:rectStroke="6dp"
            app:textColor="@color/c33"
            app:circleRadius="3dp"
            app:rectNormalColor="@color/bg_gray"
            app:rectChooseColor="@color/textBlue"/>

        <TextView
            android:id="@+id/tv_forget"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:text="@string/forget_pwd"
            android:layout_gravity="right"
            android:layout_marginBottom="32dp"
            android:layout_marginRight="22dp"
            android:textColor="@color/textBlue"
            android:textSize="13sp"/>

    </LinearLayout>

</LinearLayout>
