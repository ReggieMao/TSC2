<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cF5">

    <View
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/cC5"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#F7F7F7">

        <RelativeLayout
            android:id="@+id/img_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/back"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_back"
            android:layout_marginLeft="27dp"
            android:text=""
            android:textColor="@color/title"
            android:textSize="20sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/layout1"
            layout="@layout/view_question1"
            android:visibility="gone"/>

        <include
            android:id="@+id/layout2"
            layout="@layout/view_question2"
            android:visibility="gone"/>

        <include
            android:id="@+id/layout3"
            layout="@layout/view_question3"
            android:visibility="gone"/>

        <include
            android:id="@+id/layout4"
            layout="@layout/view_question4"
            android:visibility="gone"/>

        <include
            android:id="@+id/layout5"
            layout="@layout/view_question5"
            android:visibility="gone"/>

        <include
            android:id="@+id/layout6"
            layout="@layout/view_question6"
            android:visibility="gone"/>

    </RelativeLayout>

</LinearLayout>